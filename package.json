{
  "name": "artiweb-next",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "setup:env": "./setup-env.sh",
    "setup:db": "directus bootstrap",
    "setup": "npm run setup:env && npm run setup:db",
    "dev:cms": "directus start",
    "dev:web": "next dev -p 5000",
    "dev": "concurrently -n cms,web -c 'cyan.bgGray.bold,magenta.bgGray.bold' 'npm:dev:cms' 'npm:dev:web'",
    "build": "concurrently --kill-others -n cms,build -s first 'npm:dev:cms' 'next build'",
    "export": "next export",
    "start": "next start",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "fix": "eslint 'src/**/*.{js,jsx,ts,tsx}' --fix"
  },
  "dependencies": {
    "@chakra-ui/react": "^1.6.12",
    "@directus/sdk": "^9.0.0-rc.99",
    "@emotion/react": "^11.5.0",
    "@emotion/styled": "^11.3.0",
    "concurrently": "^6.3.0",
    "directus": "^9.0.0-rc.99",
    "focus-visible": "^5.2.0",
    "framer-motion": "^5.2.1",
    "lodash": "^4.17.21",
    "next": "^11.1.2",
    "next-plugin-preval": "^1.2.1",
    "nprogress": "^0.2.0",
    "p5": "^1.4.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-headroom": "^3.2.0",
    "react-icons": "^4.3.1",
    "react-indiana-drag-scroll": "^2.1.0",
    "react-markdown": "^7.1.0",
    "react-p5": "^1.3.21",
    "react-player": "^2.9.0",
    "react-scroll-parallax": "^2.4.0",
    "react-textfit": "^1.1.1",
    "smoothscroll-polyfill": "^0.4.4",
    "sqlite3": "^5.0.2",
    "use-mobile-detect-hook": "^1.0.4"
  },
  "devDependencies": {
    "@types/node": "^16.11.6",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^17.0.34",
    "@types/react-dom": "^17.0.11",
    "@types/react-headroom": "^2.2.2",
    "@types/smoothscroll-polyfill": "^0.3.1",
    "dotenv": "^10.0.0",
    "eslint": "^8.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "typescript": "^4.4.4"
  }
}
